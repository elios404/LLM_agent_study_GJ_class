        <!-- 페이징과 검색기능 추가 -->
        <select id="getListWithPaging"
                resultType="BoardVO">
        <![CDATA[
                select 
                bno, title, content, writer, regdate, updatedate
                from 
                (
                select /*+INDEX_DESC(tbl_board pk_board) */
                        rownum rn, bno, title, content, writer, regdate, updatedate 
                from 
                        tbl_board
                where 
        ]]>
                <trim prefix="(" suffix=") AND " prefixOverrides="OR"> <!--아래의 prefix에서 제일 처음 나오는 OR은 제거-->
                        <foreach item='type' collection="typeArr"> <!--typeArr은 넘어온 클래스 Criteria의 getTypeArr을 호출한다. "TCW" -> [T, C, W]-->
                        <trim prefix="OR">
                                <choose>
                                <when test="type == 'T'.toString()">
                                        title like '%'||#{keyword}||'%'
                                </when>
                                <when test="type == 'C'.toString()">
                                        content like '%'||#{keyword}||'%'
                                </when>
                                <when test="type == 'W'.toString()">
                                        writer like '%'||#{keyword}||'%'
                                </when>
                                </choose>
                        </trim>
                        </foreach>
                </trim>
                
        <![CDATA[    
                rownum <= #{pageNum} * #{amount}
                )
                where rn > (#{pageNum} -1) * #{amount}   
        ]]>
        </select>



        <select id="read" resultType="BoardVO">
                select * from tbl_board where bno = #{bno}
        </select>


        <insert id="insert">
                <selectKey keyProperty="bno" order="BEFORE" resultType="long">
                        select seq_board.nextval from dual 
                </selectKey>
                insert into tbl_board (bno, title, content, writer)
                values (#{bno}, #{title}, #{content}, #{writer})
        </insert>


        <update id="update">
                update tbl_board
                set title = #{title}, writer = #{writer}, content = #{content}, updateDate = sysdate
                where bno = #{bno}
        </update>


        <delete id="delete">
                delete from tbl_board
                where bno = #{bno}
        </delete>
    
</mapper>




