<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.board.mapper.BoardMapper"> <!--실제 코드에서 인터페이스가 있는 부분 경로 + 파일 이름-->

        <select id="getList" resultType="BoardVO">
        <!-- CDATA를 사용하면 그 안에 내용은 XML 문법에 영향이 없음. -->
        <![CDATA[
                select * from tbl_board
        ]]>
        </select>

